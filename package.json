{
  "name": "micro-frontend-starter",
  "version": "0.0.1",
  "description": "Template for starter of micro frontends",
  "main": "index.js",
  "scripts": {
    "bootstrap": "pnpm i && pnpm run build:plugin",
    "dev": "cross-env VITE_MICRO_MODE=true tsx ./scripts/dev.ts",
    "dev:main": "pnpm run dev --app main",
    "dev:subapp1": "pnpm run dev --app subapp1",
    "dev:subapp2": "pnpm run dev --app subapp2",
    "dev:subapp3": "pnpm run dev --app subapp3",
    "build": "cross-env VITE_MICRO_MODE=true tsx ./scripts/build.ts",
    "build:plugin": "pnpm run build --app plugin",
    "build:main": "pnpm run build --app main",
    "build:subapp1": "pnpm run build --app subapp1",
    "build:subapp2": "pnpm run build --app subapp2",
    "build:subapp3": "pnpm run build --app subapp3",
    "lint": "eslint --ext .js,.ts,.vue --fix ./packages/*/src",
    "prettier": "prettier --write --ignore-unknown '**/*'",
    "commit": "git-cz",
    "release": "npx bumpp --push --tag --commit 'release: v'",
    "prepare": "husky install",
    "docker:build": "docker build --progress=plain -t micro-frontend-starter .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "postinstall": "pnpm run build:plugin"
  },
  "keywords": [
    "micro-frontends",
    "qiankun",
    "vue",
    "react",
    "svelte"
  ],
  "author": "yugasun",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bumpp": "^7.2.0",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^8.7.1",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^1.7.3"
  },
  "packageManager": "pnpm@7.8.0"
}
